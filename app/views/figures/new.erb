<h1>Create a new Figure</h1>

<form action="/figures" method="POST">
  <label>Name:</label>
  <br>
  <input type="text" id="figure_name" name="figure[name]">
  <br>

  <h3>Existing Titles</h3>
  <% Title.all.each do |title| %>
    <label><%= title.name %></label>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>"/> <br>
  <% end %>
  <br>

  <h3>Create New Title</h3>
  <label>Title Name: </label>
  <br>
  <input type="text" name="title[name]" id="new_title"/>
  <br><br>

  <h3>Existing Landmarks</h3>
  <% Landmark.all.each do |landmark| %>
    <label><%= landmark.name %></label>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>"/>
  <% end %>
  <br>

  <h3>New Landmarks</h3>
  <label>Landmark Name: </label>
  <br>
  <input type="text" name="landmark[name]" id="new_landmark"/>
  <br>
  <label>Year Complete: </label>
  <br>
  <input type="text" name="landmark[year_completed]"/>
  <br>

  <input type="submit" value="Create New Figure">
</form>

