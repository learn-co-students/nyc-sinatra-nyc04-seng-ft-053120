<h1>Create a New Figure</h1>

<form method="post" action='/figures' id='form1'>
  <label for="figure_name">Name: </label>
  <input type="text" name="figure[name]" id="figure_name">

  <p>Titles:<br>
    <% @titles.each do |title| %>
      <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>"> <%= title.name %><br>
    <% end %></p>

  <p><label for="new_title">Create A New Title: </label>
  <input type="text" name="title[name]" id="new_title"></p>

  <p>Landmarks:<br>
    <% @landmarks.each do |landmark| %>
      <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>"> <%= landmark.name %><br>
    <% end %></p>

  <p>Create New Landmark:</p>
  <label>Name: </label>
  <input type="text" name="landmark[name]" id="new_landmark">
  <label>Year: </label>
  <input type="text" name="landmark[year_completed]">

  <button type="submit" form='form1' value="Submit">Create New Figure</button>
</form>